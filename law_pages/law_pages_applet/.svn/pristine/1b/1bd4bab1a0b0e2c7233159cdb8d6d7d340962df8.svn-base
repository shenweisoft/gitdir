}
.loading2{
    width: 60px;
    height: 60px;
    float: right;
    margin-top: 65px;
    margin-right: 30px;
}
.loading2 span{
    display: inline-block;
    width: 8px;
    height: 100%;
    margin-left: 3px;
    border-radius: 1px;
    background: #fff;
    -webkit-animation: load2 1.04s ease infinite;
}
@-webkit-keyframes load2{
    0%,100%{
        height: 30px;
        background: #ffffff;
    }
    50%{
        height: 60px;
        background: #cccccc;
    }
}
.loading2 span:nth-child(2){
    -webkit-animation-delay:0.2s;
}
.loading2 span:nth-child(3){
    -webkit-animation-delay:0.4s;
}
.loading2 span:nth-child(4){
    -webkit-animation-delay:0.6s;
}
.loading2 span:nth-child(5){
    -webkit-animation-delay:0.8s;
}