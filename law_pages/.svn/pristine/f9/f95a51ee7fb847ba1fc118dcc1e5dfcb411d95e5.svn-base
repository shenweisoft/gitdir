
<div class="row">
    <div class="panel po-relative" >
        <img src="views/images/background.png" style="width: 100%;">

        <div class="login-box">
            <div class="login-form">
                <form ng-submit="queryLog()">
                    <div class="login-logo col-xs-12"></div>
                    <div class="form-group ">
                        <div class="input-group" ng-class="{'has-error':serialNoError}">
                            <span class="input-group-addon">流水号</span>
                            <input type="text" name="serialNo" ng-model="user.serialNo" minlength="3" maxlength="22" class="form-control form-con-h" placeholder="输入流水号" required>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="input-group" ng-class="{'has-error':loginAccountError}">
                            <span class="input-group-addon">用户名</span>
                            <input type="text" name="username" ng-model="user.loginAccount" minlength="3" maxlength="22" class="form-control form-con-h" placeholder="输入用户名" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group"  ng-class="{'has-error':passwordError}">
                            <span class="input-group-addon">密&nbsp;&nbsp;码</span>
                            <input type="password" name="password" ng-model="user.password" class="form-control form-con-h" minlength="6" maxlength="16"   placeholder="输入密码" required>
                        </div>
                    </div>


                    <button class="login-submit" type="submit" value="登录">登录</button>

                </form>
            </div>
        </div>
    </div>
</div>
