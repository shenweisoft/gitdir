<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="cancel()">&times;</button>
  <h4 class="modal-title" id="myModalLabel">添加角色</h4>
</div>
<div class="modal-body">
  <form class="form-horizontal" role="form">
    <div class="form-group">
      <div class="row row_margin">
        <div class="col-xs-3 text-right">
          <label class="control-label"><span class="xing">*</span>兼职部门</label>
        </div>
        <div class="col-xs-6" ng-class="{'has-error':deptErrorMessage}">
          <select ng-model="selectedDept" ng-change="changeType()" class="form-control input-sm" ng-options="x.id as (x.id | deptId2Text:items.originalData) for x in items.originalDeptList" >
          </select>
        </div>
        <div class="error-message"  ng-bind="deptErrorMessage"></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row row_margin">
        <div class="col-xs-3 text-right">
          <label class="control-label"><span class="xing">*</span>兼职角色</label>
        </div>
        <div class="col-xs-6" ng-class="{'has-error':roleErrorMessage}">
          <select ng-click="selectRole()" ng-model="role" class="form-control input-sm" ng-options="x.name for x in roleTypeFilteredData" ></select>
        </div>
        <div class="error-message"  ng-bind="roleErrorMessage"></div>
      </div>
    </div>
    <div class="form-group">
    <div class="row row_margin">
      <div class="col-xs-3 text-right">
        <label class="control-label"><span class="xing">*</span>部门管理者</label>
      </div>
      <div class="col-xs-8 text-left">
        <label class="radio-inline">
          <input ng-model="isSelf" class="staff_radio" type="radio" name="optionsRadiosInline" value="1" checked>是
        </label>
        <label  class="radio-inline">
          <input ng-model="isSelf" class="staff_radio" type="radio" name="optionsRadiosInline" value="0">否
        </label>
      </div>
      <div class="col-xs-1"></div>
    </div>
  </div>
  <div class="clear"></div>
</form>
</div>
<div class="modal-footer">
<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-6 btn_center">
    <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="cancel()">取消</button>
    <button type="button" class="btn btn-brand" ng-click="ok()">保存</button>
  </div>
  <div class="col-xs-3"></div>
</div>
</div>