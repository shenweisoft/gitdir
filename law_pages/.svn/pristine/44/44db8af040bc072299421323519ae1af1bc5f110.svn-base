<div class="row flowChart applicant ng-scope">
  <!-- 赔偿计算头部信息展示 -->
    <div class="flowChart_box" ng-show="options.mainFlow">
      <!--赔偿计算-->
      <div >
        <div class="col-xs-12" style="height: 70px; margin-top: 10px;">
          <div style="width: 265px; margin: 0 auto;">
            <div class="step-circle pull-left" ng-class="{'circle-ok': step.step1Ok(), 'circle-blue': step.step1ing()}">
              <i>1</i>
              <span>索赔方</span>
            </div>
            <div class="pull-left ng-scope">
              <div class="pull-left applicant_e"></div>
              <div class="step-circle pull-left" ng-class="{'circle-ok': step.step2Ok(), 'circle-blue': step.step2ing(), 'circle-line': step.step2()}">
                <i class="ng-binding">2</i>
                <span class="ng-binding">赔偿方</span>
              </div>
            </div>
            <div class="pull-left ng-scope">
              <div class="pull-left applicant_e"></div>
              <div class="step-circle pull-left" ng-class="{'circle-blue': step.step3ing(), 'circle-line': step.step3()}"><i class="ng-binding">3</i>
                <span class="ng-binding">赔偿信息</span>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xs-12 applicant_cont">
          <div class="col-xs-4"><p style="line-height: 40px;">流水号：<span class="ng-binding">{{compensateInfo.serialNo}}</span></p></div>
          <div class="col-xs-4">
            <p style="line-height: 40px;">
              {{compensateInfo.orgType == '1'? '法院机构':'调解机构'}}：
              <span class="ng-binding">{{compensateInfo.orgName}}</span>
            </p>
          </div>
          <div class="col-xs-4">
            <p style="line-height: 40px;">
              {{compensateInfo.orgType == '1'? '法院部门':'调解点'}}：
              <span class="ng-binding">{{compensateInfo.pointName}}</span>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!--顶部菜单箭头显示隐藏-->
    <div class="flowChart_bottom flowChart_b1" ng-show="options.mainFlow" ng-click="options.mainFlow=!options.mainFlow">
      <img class="flowChart_bottom_img" src="views/images/2-pre.png">
      <img src="views/images/2-nor.png">
    </div>
    <div class="flowChart_bottom flowChart_b2 ng-hide" ng-hide="options.mainFlow" ng-click="options.mainFlow=!options.mainFlow">
      <img class="flowChart_bottom_img" src="views/images/1-pre.png">
      <img src="views/images/1-.png">
    </div>
</div>
<div ui-view></div>
<!-- 右侧添加按钮 赔偿方与索赔方-->
<div class="add_Applicant ng-scope ng-binding" id="addApplicantBtn" style="right:-92px;" ng-show="(options.step != 3) && isDetail" ng-click="addCompensationApplyer(options.step - 1)">
  <i class="iconfont icon-tianjia"></i>
  &nbsp;&nbsp;&nbsp;添加{{options.step == 1?'索赔方':'赔偿方'}}
</div>
<!-- 底部按钮 -->
<div class="row applicant_footer padding_top_bottom button_box background_color_d bottom_btn_fixed ng-scope" ng-if="isDetail">
  <div class="col-xs-12 padding_top_bottom ">
      <button type="button" class="btn btn-brand pull-right ng-hide" ng-show="options.step == 3" ng-click="compensateInfoOver()">结束</button>
      <button type="button" class="btn btn-brand pull-right" ng-hide="options.step == 3" ng-click="nextStep()" >下一步</button>
      <button type="button" class="btn btn-brand pull-right" ng-click="saveCompensateInfo(undefined,true)">保存</button>
      <button type="button" class="btn btn-default pull-right ng-hide" ng-show="options.step !== 1" ng-click="preStep()">上一步</button>
  </div>
</div>