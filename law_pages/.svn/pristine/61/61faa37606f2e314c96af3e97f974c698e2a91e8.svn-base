<!-- 选择鉴定机构 -->
<div class="appraisal_element_box"  style="margin-bottom: 70px;height: 100%;">
    <div class="appraisal_element_box_t margin-bottom-15">
        <p>
            <i class="iconfont icon-shudao"></i>
            <span>流水号</span>
            <span>{{appraisalInfo.serialNo}}</span>
        </p>
    </div>
    <form role="form" class="form-horizontal form-input" >
        <div class="row clearfix ">
            <div class="form-group col-xs-6">
                <label class="col-xs-3 control-label"><i>*</i> 委托主体</label>
                <div class="col-xs-6" ng-class="{'has-error':appraisalInfo.principalAgentError}">
                    <select class="form-control"  name="principalAgent" ng-model="appraisalInfo.principalAgent" ng-options="x.id as (x.value) for x in principalAgentList">
                        <option value="" >请选择</option>
                    </select>
                </div>
            </div>
            <div class="form-group col-xs-6">
                <label class="col-xs-3 control-label"><i>*</i> 鉴定用途</label>
                <div class="col-xs-6" ng-class="{'has-error':appraisalInfo.identificationPurposeError}">
                    <select class="form-control"  name="identificationPurpose" ng-model="appraisalInfo.identificationPurpose" ng-options="x.id as (x.value) for x in identificationPurposeList">
                        <option value="" >请选择</option>
                    </select>
                </div>
            </div>
            <div class="form-group col-xs-6">
                <label class="col-xs-3 control-label"><i>*</i> 鉴定机构</label>
                <div class="col-xs-6" ng-class="{'has-error':appraisalInfo.appraisalOrgIdError}">
                    <select ng-disabled="appraisalOrgOnly || appraisalInfo.isRandom" class="form-control"  name="appraisalOrgId" ng-model="appraisalInfo.appraisalOrgId" ng-change="chooseAgency(appraisalInfo.appraisalOrgId)" ng-options="x.id as (x.text) for x in accreditationList" >
                        <option value="" >请选择</option>
                    </select>
                </div>
                <div class="col-xs-1">
                    <button type="button" class="btn btn-brand" ng-click="showRandom()" ng-disabled="appraisalInfo.isRandom">随机匹配</button>
                </div>
            </div>
            <div class="form-group col-xs-6">
                <label class="col-xs-3 control-label"> <i>*</i>申请日期</label>
                <div class="col-xs-6" ng-class="{'has-error':appraisalInfo.appalyDateError}">
                    <div class="input-group">
                        <input readonly type="text" class="form-control" datepicker-popup="yyyy-MM-dd" ng-model="appraisalInfo.appalyDate" is-open="appraisalInfo.opened"  show-weeks="false" show-button-bar="false"/>
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default" ng-click="open($event,appraisalInfo)"><i class="glyphicon glyphicon-calendar"></i></button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="information_box" style="position: relative; padding: 30px 70px;" ng-show="appraisalInfo.appraisalOrgId">
        <a class="brand-color cur-pointer" style="position: absolute; top: 15px; right: 26px;" ng-click="appraisalCommet()" >查看鉴定评价</a>
        <div class="row">
            <p class="col-xs-4">许可证号: {{agencyInfo.licence}}</p>
            <p class="col-xs-4">法人: {{agencyInfo.legalPerson}}</p>
            <p class="col-xs-4">负责人: {{agencyInfo.personLiable}}</p>
            <p class="col-xs-4">联系电话: {{agencyInfo.telephone}}</p>
            <p class="col-xs-4">传真: {{agencyInfo.fax}}</p>
            <p class="col-xs-4">邮箱: {{agencyInfo.email}}</p>
            <p class="col-xs-12">业务范围: {{agencyInfo.range}}</p>
            <p class="col-xs-12">机构地址: {{agencyInfo.address}}</p>
        </div>
    </div>

    <!--随机匹配弹出框-->
    <div ng-show="isRandom" class="randomBox">
        <span>是否随机匹配鉴定机构，一旦随机匹配成功，将不可修改！</span>
        <div>
            <button type="button" style="margin-right: 30px;" class="btn btn-brand" ng-click="handleRandom()">随机匹配</button>
            <button type="button" class="btn btn-brand" ng-click="isRandom = false">取消</button>
        </div>
    </div>
</div>