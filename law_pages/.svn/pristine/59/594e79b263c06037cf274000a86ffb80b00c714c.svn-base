<div class="role_management_d relative_top">
    <div class="row bg-default">
        <div class="col-xs-12 role_management_right_d">
            <div class="role_management_right_t_d ">
                <div class="col-xs-2 role_management_right_t_l_d no-padding">系统通知列表</div>
                    <div class="col-xs-10 margin-top-6 navbar-form" style="width: 83%;">
                        <div class="col-lg-3 col-xs-4 no-padding ">
                            <button class="btn btn-brand " ng-click="queryNotice()"  ><i class="iconfont icon-tianjia"></i>  新建通知</button>
                            <button class="btn btn-default mar-le-10" type="button" ng-click="delNotice()"><i class="iconfont icon-iconfont19 icon-blue" ></i> 删除</button>
                        </div>
                        <div class="col-lg-3 col-xs-3">
                            <select name="type" ng-model="notice.type" class="form-control" ng-options="x.id as x.value for x in noticeTypeList" style="width: 100%">
                                <option value=""> 请选择</option>
                            </select>
                        </div>
                        <div class="col-lg-5 col-xs-4">
                            <div class="search_box">
                                <input type="text" class="form-control search_input" ng-model="notice.title" placeholder="请输入搜索条件" style="width: 100%" >
                                <i class="iconfont icon-sousuo input-search-img" style="top: 12px;"></i>
                            </div>
                        </div>
                        <div class="col-lg-1 col-xs-1 no-padding">
                            <button type="submit" class="btn btn-brand mar-v-3" ng-click="getDataInfo()">搜索</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th class="col-xs-1"><input type="checkbox" name="orgCheckbox" ng-change="noticToggleSelectAll()"  ng-model="noticeSelectAll" ng-checked="orgSelectAll"></th>
                            <th class="col-xs-2">标题</th>
                            <th class="col-xs-2">类型</th>
                            <th class="col-xs-2">链接URL</th>
                            <th class="col-xs-2">创建时间</th>
                            <th class="col-xs-2">操作</th>

                        </tr>
                        </thead>
                        <tbody ng-if="pageData.showList.length != 0 ">
                        <tr ng-repeat="noticeObj in pageData.showList">
                            <td>
                                <input type="checkbox" name="orgCheckbox" ng-change="noticeChxChange()" ng-checked="noticeObj.checked" ng-model="noticeObj.checked">

                            </td>
                            <td>{{noticeObj.title}}</td>
                            <td>
                                <span ng-repeat="x in noticeTypeList | filter:{id : noticeObj.type}">{{x.value}}</span>
                            </td>
                            <td>{{noticeObj.linkUrl}}</td>
                            <td>{{noticeObj.createDate}}</td>
                            <td class="action_bar">
                                <i class="iconfont icon-bianji" ng-click="queryNotice(noticeObj)"></i>
                                <i class="iconfont icon-iconfont19" ng-click="delNotice(noticeObj)"></i>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="text-center"  ng-if="pageData.showList.length != 0 ">
                    <pagination previous-text="<" next-text=">" first-text="<<" last-text=">>" items-per-page="pageData.itemNum" class="pagination-custom" total-items="pageData.totalItems" ng-model="pageData.currentPage" ng-change="pageChanged()" max-size="7" boundary-links="true" rotate="false"></pagination>
                </div>

                <div ng-show="pageData.showList.length == 0" class="text-center">
                    <img src="views/images/search_null.png" ><br>
                    抱歉，未找到相关内容！
                </div>
            </div>
        </div>
    </div>
</div>