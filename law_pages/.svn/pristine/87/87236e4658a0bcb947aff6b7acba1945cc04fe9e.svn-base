<div class="modal-content">
    <div class="modal-header">
        <i class="iconfont icon-guanbi close" ng-click="cancel()"></i>
        <h4 class="modal-title ng-binding" id="myModalLabel">
            <span ng-show="state == '1'">补充材料</span>
            <span ng-show="state == '2'">退回任务</span>
            <span ng-show="state == '3'">取消鉴定</span>
        </h4>
    </div>
    <div class="modal-body" style="padding-left: 30px; padding-right: 30px; padding-bottom: 30px;" >
        <textarea rows="8" ng-model="remark" class="padding-10" placeholder="请输入理由" style="width: 100%; height: 100%;" ng-class="{'border_red':appraisalRemarkError}"></textarea>
    </div>
    <div class="modal-footer">
        <div class="row">
            <div class="col-xs-3"></div>
            <div class="col-xs-6 btn_center">
                <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="cancel()">返回</button>
                <button type="button" class="btn btn-primary save_btn" ng-click="submitAppraisalInfo()">提交</button>
            </div>
            <div class="col-xs-3"></div>
        </div>
    </div>
</div>