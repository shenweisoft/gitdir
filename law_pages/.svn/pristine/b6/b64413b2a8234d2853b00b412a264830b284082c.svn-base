<div class="modal-header ng-scope" style="font-weight: bold; font-size: 16px;">
    {{title}}
    <i class="iconfont pull-right icon-guanbi close" ng-click="cancel()"></i>
</div>
<div class="header_bt">金额拆分</div>
<div class="row">
    <div class="col-xs-12" style="margin-top: 10px;">
        <div class="col-xs-12" style="padding-bottom: 15px;">
            <table class="table pay_money_table">
                <tr>
                    <th style="width: 60%;">赔偿方</th>
                    <th style="width: 40%;">赔偿金额</th>
                </tr>
                <tr ng-repeat="respondent in fee.respondentList">
                    <td style="width: 60%;">
                        <span >{{respondent.payName}}</span>
                        <!-- <span ng-if="respondent.idType != '0'">
                            <span ng-if="secondInstanceFlag">{{respondent.payName}}</span>
                            <span ng-if="!secondInstanceFlag">{{respondent.orgName}}</span>
                        </span> -->
                    </td>
                    <td style="width: 40%;"><input class="form-control" style="width: 100%;" type="text" ng-model="respondent.extraMoney" ng-change="calculatePayTotalMoney()"></td>
                </tr>
                <tr>
                    <td style="width: 60%;">拆分总金额</td>
                    <td style="width: 40%;"><input class="form-control" style="width: 100%;" type="text" ng-model="fee.extraAmount" ng-disabled="true" placeholder="0.00"></td>
                </tr>
            </table>
        </div>
    </div>
</div>